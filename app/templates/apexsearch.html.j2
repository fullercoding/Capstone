{% extends './base.html.j2' %}

{% block title %}
  Player search
{% endblock %}

{% block content %}
<table class="table table-dark table-hover">
<form action = "{{url_for('main.ApexSearcher')}}" method="POST">
   <div class="mb-3">
    <label for="player" class="form-label">Player name</label>
    <input type="text" class="form-control" name="player" id="player" >
  </div>
  <div class="mb-3">
    <label for="platform" class="form-label">Platform</label>
    <input type="text" class="form-control" name="platform" id="platform">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  <br>
  <small style="color:red">{{ error }}</small>
</form>

  <thead>
    <tr>
      <th scope="col">Username</th>
      <th scope="col">Apex Season</th>
      <th scope="col">Rank</th>
      <th scope="col">Platform</th>
      <th scope="col">Battle Pass Level</th>

    </tr>
  </thead>
{% if gamer_data %}
  <tbody>
    <tr>
      <td>{{ gamer_data.player_name }}</td>
      <td>{{ gamer_data.apex_season }}</td>
      <td>{{ gamer_data.apex_rank }}</td>
      <td>{{ gamer_data.apex_platform }}</td>
      <td>{{ gamer_data.apex_level }}</td>
    </tr>
  </tbody>
</table>
{% endif %}
{% endblock %}